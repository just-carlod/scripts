#!/bin/bash
brightnessctl || exit
brightness=$(brightnessctl g)
brightstatus() {
if [ $brightness -lt 32 ]; then
	echo $brightness "ğŸŒ‘ "
elif [ $brightness -lt 64 ]; then
	echo $brightness "ğŸŒ™ "
elif [ $brightness -lt 128 ]; then
	echo $brightness "ğŸŒ› "
else
	echo $brightness "ğŸŒ• "
fi
}
case "$1" in
	-s ) brightnessctl s $2;;
	* ) brightstatus ;;
esac
